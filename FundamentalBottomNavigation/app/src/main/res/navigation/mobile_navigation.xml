<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.fundamentalbottomnavigation.HomePage"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home_page" />
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.fundamentalbottomnavigation.ProfilPage"
        android:label="@string/search"
        tools:layout="@layout/fragment_search_page" />
    <fragment
        android:id="@+id/navigation_favorit"
        android:name="com.example.fundamentalbottomnavigation.SearchPage"
        android:label="@string/favorit"
        tools:layout="@layout/fragment_favorit_page" />
    <fragment
        android:id="@+id/navigation_account"
        android:name="com.example.fundamentalbottomnavigation.AccountPage"
        android:label="@string/account"
        tools:layout="@layout/fragment_account_page" />

</navigation>